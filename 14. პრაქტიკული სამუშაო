CREATE TABLE Author (
  id INTEGER,
  name varchar(100) NOT NULL,
  surname varchar(100) NOT NULL
);


CREATE TABLE Address(
  id INTEGER,
  address VARCHAR(255),
  city VARCHAR(255),
  zip VARCHAR(255)
);


CREATE TABLE Category (
  id INTEGER,
  name VARCHAR(255)
);


CREATE TABLE City (
  id INTEGER,
  city VARCHAR(255),
  country_id INTEGER
);


CREATE TABLE country(
  id INTEGER,
  country VARCHAR(60)
);


CREATE TABLE customer (
  id INTEGER,
  library INTEGER,
  name varchar(100) NOT NULL,
  surname varchar(100) NOT NULL,
  email VARCHAR(50),
  address_id INTEGER,
  create_date DATE,
  active INTEGER
);


CREATE TABLE Book (
  id INTEGER,
  title VARCHAR(250),
  description TEXT,
  release_year INTEGER,
  languadge_id INTEGER,
  rental_duration INTEGER,
  rental_rate NUMERIC(4,2)
);


CREATE TABLE Book_author(
  id INTEGER,
  author_id INTEGER,
  book_id INTEGER
);


CREATE TABLE Book_category(
  id INTEGER,
  category_id INTEGER,
  book_id INTEGER
);


CREATE TABLE inventory(
  id INTEGER,
  library_id INTEGER,
  book_id INTEGER
);


CREATE TABLE languadge(
  id INTEGER,
  name varchar(60)
);


CREATE TABLE Payment(
  id INTEGER,
  customer_id INTEGER,
  staff_id INTEGER,
  rental_id INTEGER,
  amount NUMERIC(5, 2),
  payment_date TIMESTAMP
);


CREATE TABLE Rental(
  id INTEGER,
  rental_date TIMESTAMP,
  inventory_id INTEGER,
  customer_id INTEGER,
  return_date TIMESTAMP,
  staff_id INTEGER
);


CREATE TABLE Staff(
  id INTEGER,
  name varchar(100) NOT NULL,
  surname varchar(100) NOT NULL,
  email VARCHAR(50),
  address_id INTEGER,
  library_id INTEGER
);


CREATE TABLE Library(
  id INTEGER,
  manager_staff_id INTEGER,
  address_id INTEGER
);



